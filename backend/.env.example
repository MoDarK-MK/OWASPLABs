# OWASP Labs - Environment Variables
# نکته: این مقادیر صرفاً برای توسعه محلی است. در محیط Production تغییر دهید.

# Flask Configuration
FLASK_ENV=development
FLASK_APP=app.py

# Database Configuration
# در صورت استفاده از PostgreSQL محلی:
DATABASE_URL=postgresql://postgres:your_password@localhost:5432/owasp_labs

# یا اگر با postgres بدون رمز عبور:
# DATABASE_URL=postgresql://postgres@localhost:5432/owasp_labs

# Security Keys
SECRET_KEY=change-me-in-production-with-random-string
JWT_SECRET=weak-jwt-secret-for-learning-only

# Redis Configuration (اختیاری)
REDIS_HOST=localhost
REDIS_PORT=6379

# API Configuration
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# Logging
LOG_LEVEL=INFO
